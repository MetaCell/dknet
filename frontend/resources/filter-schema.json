{
    "$id": "https://dknet.com/filter-schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "dkNET filter",
    "description": "dkNET filter json schema",
    "type": "object",
    "properties": {
        "filter": {
            "title": "dkNET filter",
            "description": "dkNET filter json schema",
            "type": "object",
            "properties": {
                "code": {
                    "type": "string"
                },
                "label": {
                    "type": "string"
                },
                "question": {
                    "type": "string"
                },
                "tooltip": {
                    "type": "string"
                },
                "inputType": {
                    "type": "string",
                    "title": "Input type",
                    "enum": [
                        "SINGLE",
                        "MULTI",
                        "BOOLEAN"
                    ],
                    "enumNames": [
                        "Single select",
                        "Multi select",
                        "Boolean"
                    ]
                },
                "options": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "code": {
                                "type": "string"
                            },
                            "label": {
                                "type": "string"
                            },
                            "icon": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "code",
                            "label"
                        ]
                    },
                    "minItems": 2,
                    "uniqueItems": true
                }
            },
            "required": [
                "code"
            ]
        },
        "repository": {
            "title": "dkNET repository",
            "description": "dkNET repository json schema",
            "type": "object",
            "properties": {
                "code": {
                    "type": "string"
                },
                "label": {
                    "type": "string"
                },
                "url": {
                    "type": "string",
                    "format": "uri"
                },
                "attributes": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "filterCode": "string",
                            "optionCodes": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "minItems": 1,
                    "uniqueItems": true
                }
            }
        }
    }
}